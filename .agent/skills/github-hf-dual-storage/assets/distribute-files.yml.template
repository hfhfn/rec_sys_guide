name: Auto Distribute Files (v3.1)

on:
  push:
    branches: [ main ]
  workflow_dispatch:
  schedule:
    - cron: '0 0 * * 0' # 运行时间：每周日午夜

jobs:
  distribute:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3
        with:
          fetch-depth: 0

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'

      - name: Install Dependencies
        run: |
          pip install --upgrade pip
          pip install "huggingface_hub>=0.17.0"

      - name: Run Distribution Script
        env:
          HF_TOKEN: ${{ secrets.HF_TOKEN }}
          HF_REPO_ID: "${{ secrets.HF_USERNAME }}/${GITHUB_REPO_NAME}" # 自动推导
        run: |
          # 确保脚本具有执行权限并运行
          python scripts/distribute_files.py

      - name: Commit and Push Manifest
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add data/file_manifest.json .gitignore
          git diff --cached --quiet || (git commit -m "Auto: Update manifest and gitignore [v3.1]" && git push)
