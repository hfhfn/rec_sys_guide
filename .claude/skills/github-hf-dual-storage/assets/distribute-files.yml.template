name: Distribute Large Files (v4.1)

on:
  push:
    branches:
      - main
    paths-ignore:
      - "README.md"
      - "index.html"

jobs:
  distribute:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3
        with:
          fetch-depth: 0

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: Install Dependencies
        run: pip install huggingface_hub

      - name: Run Distribution Script (HF sync only)
        env:
          HUGGING_FACE_HUB_TOKEN: ${{ secrets.HF_TOKEN }}
        run: python scripts/distribute_files.py

